{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs", // 为了使用 ts 配置 webpack，ts-node 只支持 commonjs 模块语法
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "allowSyntheticDefaultImports": true
  }
}
